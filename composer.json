{
    "name": "blockshiftnetwork/chat-markdown-converter",
    "description": "Convert AI-generated Markdown to WhatsApp, Telegram, Discord and Slack compatible formats using an Intermediate Representation (IR).",
    "keywords": [
        "blockshiftnetwork",
        "chat-markdown-converter"
    ],
    "homepage": "https://github.com/blockshiftnetwork/chat-markdown-converter",
    "license": "MIT",
    "authors": [
        {
            "name": "Blockshift Network",
            "email": "hello@blockshift.network",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Blockshift\\ChatMarkdown\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Blockshift\\ChatMarkdown\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
